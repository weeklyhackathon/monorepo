{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/weeklyhackathon-core",
    "module": "nodenext",
    "types": ["node"],
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": [
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.mjs",
    "eslint.config.mjs",
    "src/scripts/**/*.ts"
  ]
}
